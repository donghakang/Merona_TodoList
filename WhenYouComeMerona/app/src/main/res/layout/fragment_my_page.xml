<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MyPageFragment">

    <RelativeLayout
        android:id="@+id/my_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/my_page_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">
            <View
                android:id="@+id/my_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/baseline_account_circle_24"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/my_profile"
                android:layout_toStartOf="@+id/my_setting"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/my_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>
                <TextView
                    android:id="@+id/my_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/my_id"
                    android:textColor="#aaaaaa"/>
                <android.widget.Button
                    android:id="@+id/btn_friend_list"
                    android:background="@drawable/default_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:text="친구 보기"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_below="@id/my_email"/>
            </RelativeLayout>
            <Spinner
                android:id="@+id/my_setting"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/baseline_more_horiz_24"/>

        </RelativeLayout>

        <View
            android:id="@+id/my_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/my_page_rl"/>

        <RelativeLayout
            android:id="@+id/my_page_level_rl"
            android:layout_below="@id/my_line1"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp">
                    <ProgressBar
                        android:id="@+id/pg_level"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_shape"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="65"/>
                    <TextView
                        android:id="@+id/tv_level_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/daysone_regular"
                        android:textSize="12sp"
                        android:text="Lv."/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="나의레벨"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp">
                    <View
                        android:id="@+id/v_my_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_circle_gradient"/>
                    <TextView
                        android:id="@+id/tv_my_content_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/daysone_regular"
                        android:textSize="20sp"
                        android:text=""/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_my_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내가한일"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp">
                    <View
                        android:id="@+id/v_our_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_circle_gradient"/>
                    <TextView
                        android:id="@+id/tv_our_content_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/daysone_regular"
                        android:textSize="20sp"
                        android:text=""/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_our_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="대신한일"
                    android:textAlignment="center"/>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/my_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/my_page_level_rl"/>


        <RelativeLayout
            android:id="@+id/my_page_list_rl"
            android:layout_marginTop="20dp"
            android:layout_below="@id/my_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/empty_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="invisible">
                <View
                    android:id="@+id/empty_status_img"
                    android:background="@mipmap/empty"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/empty_status_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/empty_status_img"
                    android:fontFamily="@font/jalnan_regular"
                    android:text="한 일이 없네요... 지금 바로 해야 할 일을 끝내세요!"/>

            </RelativeLayout>
            <ListView
                android:id="@+id/lv_my_page_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>
    </RelativeLayout>






</RelativeLayout>