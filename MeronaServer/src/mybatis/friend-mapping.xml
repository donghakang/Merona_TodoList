<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="mybatis.FriendMapper">
	<select id="getFriendIdList" parameterType="user" resultType="user">
		<![CDATA[
			SELECT * FROM FRIEND
			WHERE USER_ID=#{user_id}
			LEFT JOIN 
		]]>
	</select>
	
	<insert id="requestFriend" parameterType="relationship">
		<![CDATA[
			INSERT INTO REQUEST(USER_FROM, FRIEND_TO)
			VALUES (#{user_id}, #{friend_id})
		]]>
	</insert>
	
	<delete id="deleteFriendRequest" parameterType="relationship">
		<![CDATA[
			DELETE FROM REQUEST 
			WHERE USER_FROM=#{user_id} AND FRIEND_TO=#{friend_id}
		]]>
	</delete>
	
	<insert id="insertFriend" parameterType="relationship">
		<![CDATA[
			INSERT INTO FRIEND(USER_ID, FRIEND_ID) 
			VALUES (#{user_id}, #{friend_id})
		]]>
	</insert>
	
	<delete id="deleteFriend" parameterType="relationship">
		<![CDATA[
			DELETE FROM FRIEND 
			WHERE USER_ID=#{user_id} AND FRIEND_ID=#{friend_id}
		]]>
	</delete>
</mapper>